{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["prebuild", "^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "web#dev": {
      "env": [
        "NODE_ENV",
        "TMDB_ACCESS_TOKEN",

        "NEXT_PUBLIC_APP_URL",
        "NEXT_PUBLIC_TMDB_URL",
        "NEXT_PUBLIC_TMDB_POSTER_URL"
      ]
    },
    "build-storybook": {
      "dependsOn": ["prebuild"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "lint": {},
    "prebuild": {
      "outputs": ["dist/**"]
    },
    "storybook": {},
    "test": {},
    "test:ci": {
      "dependsOn": ["prebuild"]
    }
  }
}
